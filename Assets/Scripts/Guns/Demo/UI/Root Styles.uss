
.hidden {
    opacity: 0;
    transition: opacity 0.125s ease-in-out;
}

.visible {
    opacity: 1;
    transition: opacity 0.125s ease-in-out;
}

.flex-grow {
    flex-grow: 1;
    flex-shrink: 0;
}

.flex-row {
    flex-direction: row;
}

.center-text {
    -unity-text-align: middle-center;
}

#icon {
    width: 150px;
    height: 150px;
    flex-shrink: 0;
    flex-grow: 0;
}

