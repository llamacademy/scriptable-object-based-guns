#icon.chevron-right {
    transition: -unity-background-image-tint-color 0.125s;
    background-image: url('project://database/Assets/Textures/chevron-circle-right.png?fileID=2800000&guid=a04baafa60b1fde4d8d713ce867dd133&type=3#chevron-circle-right');
    width: 75px;
    height: 75px;
    align-self: center;
    display: flex;
    -unity-background-image-tint-color: white;
}

#icon.chevron-right:hover {
    -unity-background-image-tint-color: grey;
    transition: -unity-background-image-tint-color 0.125s;
}

.name {
    font-size: 24px;
}

.description {
    font-size: 16px;
    white-space: normal;

}

.unity-label {
    color: white;
}

.attachment-slot {
    flex-grow: 1;
    flex-shrink: 0;
    width: 450px;
    height: 150px;
}

.hr {
    border-bottom-color: white;
    border-bottom-width: 2px;
}

.display-none {
    display: none;
}

.fade-in-right {
    translate: 0% 0%;
    opacity: 1;
    transition: translate 0.25s ease-in-out, opacity 0.25s;
}

.fade-out-left {
    translate: -100% 0%;
    opacity: 0;
    transition: translate 0.25s ease-in-out 0.25s, opacity 0.25s linear 0.25s;
}

.deselected {
    border-width: 3px;
    border-color: transparent;
    transition: border-color 0.125s ease-in;
}

.selected {
    border-color: green;
    border-width: 3px;
    transition: border-color 0.125s ease-out;
}

.fade-out-up {
    opacity: 0;
    translate: 0px -100px;
    transition: opacity 125ms ease-in-out, translate 125ms ease-in-out;
}

.fade-in-down {
    opacity: 1;
    translate: 0px 0px;
    transition: opacity 125ms ease-in-out, translate 125ms ease-in-out;
}

.border-left-animate-height-0 {
    max-height: 0%;
    max-width: 3px;
    justify-content: center;
    align-self: stretch;
    transition: max-height 125ms ease-in-out;
}

.border-left-animate-height-100 {
    max-height: 100%;
    max-width: 3px;
    justify-content: center;
    align-self: stretch;
    transition: max-height 125ms ease-in-out;
}

.delay-0ms {
    transition-delay: 0ms;
}
.delay-50ms {
    transition-delay: 50ms;
}
.delay-100ms {
    transition-delay: 100ms;
}
.delay-150ms {
    transition-delay: 150ms;
}
.delay-200ms {
    transition-delay: 200ms;
}
.delay-250ms {
    transition-delay: 250ms;
}